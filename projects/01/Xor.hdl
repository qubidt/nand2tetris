/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    // x^y := (xy)'(x'y')'
    //     := (x nand y)(x'y')'
    //     := (x nand y)(x+y)
    Or(a=a, b=b, out=aOrB);
    Nand(a=a, b=b, out=aNandB);
    And(a=aNandB, b=aOrB, out=out);
}